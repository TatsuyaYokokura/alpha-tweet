<%= form_with(model: tweet, local: true) do |f| %>
  <div class="message-wrap__attr">
    <%= f.label :title, class: 'message-wrap__attr__label' %><br />
    <%= f.text_field :title, autofocus: true, maxlength: '20', class: 'message-wrap__attr__field' %>
  </div>

  <div class="message-wrap__attr">
    <%= f.label :description, class: 'message-wrap__attr__label' %><br />
    <%= f.text_area :description, autofocus: true, autocomplete: "email", class: 'message-wrap__attr__area' %>
  </div>

  <div class="message-wrap__attr">
    <span class="message-wrap__attr__label">Image</span>
    <%= f.label :click_Image, for: 'user_avatar', class: 'message-wrap__attr__btn' %><br>
    <%= f.file_field :image, onchange: 'imageload();' %><br>
    <img id="preview">
  </div>

  <div class="actions message-wrap__attr">
    <%= f.submit "Submit", class: 'message-wrap__attr__submit' %>
  </div>
<% end %>
